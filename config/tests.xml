<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="LWJGL cross-platform tests">
    <test name="core">
        <packages>
            <package name="org.lwjgl"/>
            <package name="org.lwjgl.system"/>
            <package name="org.lwjgl.system.libc"/>
            <package name="org.lwjgl.system.libffi"/>
        </packages>
    </test>
    <test name="libdivide" parallel="methods" thread-count="4">
        <packages>
            <package name="org.lwjgl.util.libdivide"/>
        </packages>
    </test>
    <test name="meshoptimizer">
        <packages>
            <package name="org.lwjgl.util.meshoptimizer"/>
        </packages>
    </test>
    <test name="opencl">
        <packages>
            <package name="org.lwjgl.opencl"/>
        </packages>
    </test>
    <test name="opus">
        <packages>
            <package name="org.lwjgl.util.opus"/>
        </packages>
    </test>
    <test name="par">
        <packages>
            <package name="org.lwjgl.util.par"/>
        </packages>
    </test>
    <test name="rpmalloc">
        <packages>
            <package name="org.lwjgl.system.rpmalloc"/>
        </packages>
    </test>
    <test name="shaderc">
        <packages>
            <package name="org.lwjgl.util.shaderc"/>
        </packages>
    </test>
    <test name="spvc">
        <packages>
            <package name="org.lwjgl.util.spvc"/>
        </packages>
    </test>
    <test name="sse">
        <packages>
            <package name="org.lwjgl.util.simd"/>
        </packages>
    </test>
    <test name="vulkan">
        <packages>
            <package name="org.lwjgl.vulkan"/>
        </packages>
    </test>
    <test name="yoga">
        <packages>
            <package name="org.lwjgl.util.yoga"/>
        </packages>
    </test>
</suite>